<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:paddingTop="@dimen/activity_top_margin"
        android:paddingBottom="@dimen/businessListView_top_margin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/businessImage"/>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/businessName"/>

        <TextView
            android:layout_below="@+id/businessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/businessDistance"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/businessDistance"
            android:id="@+id/categoryImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/businessDistance"
            android:layout_toRightOf="@id/categoryImage"
            android:layout_toEndOf="@+id/categoryImage"
            android:id="@+id/businessCategory"/>

    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:id="@+id/businessStatus"
        android:layout_height="wrap_content"/>
</LinearLayout>